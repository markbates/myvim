snippet cl "Code Listing" b
\begin{codelisting}
\codecaption{$1}
\label{code:$2}
${3:<<(source/$4/$2.${5:txt}${6:, lang: text})}
\end{codelisting}
endsnippet

snippet godoc "godoc link" i
[\`github.com/$1\`](https://godoc.org/github.com/$1)
endsnippet

snippet block "" b
<%= $1 { %>
$2
<% } %>
endsnippet

snippet c "Code Block" b
<%= code("${1:go}") { %>
$2
<% } %>
endsnippet

snippet code "Code Block" b
\`\`\`${1:text}
$2
\`\``
endsnippet

snippet bash "bash Block" b
\`\`\`bash
$ $1
\`\``
endsnippet

snippet reflist "Reference a Listing"
Listing~\ref{code:$1}
endsnippet

snippet refsec "Reference a Section"
Section~\ref{sec:$1}
endsnippet

snippet reftable "Reference a Table"
Table~\ref{table:$1}
endsnippet

snippet refchap "Reference a Chapter"
Chapter~\ref{chapter:$1}
endsnippet

snippet hl "Highlight Lines of Code"
options: "hl_lines":[$1]
endsnippet

snippet link ""
[$1](${2:$1})
endsnippet

snippet bfunc "" i
func $1(c buffalo.Context) error {
	$2
}
endsnippet

snippet bmid "Description" i
func $1(next buffalo.Handler) buffalo.Handler {
	return func(c buffalo.Context) error {
		$2
	}
}
endsnippet

snippet panel "Description" i
<%= panel("$1", {$2}) { %>
$3
<% } %>
endsnippet

snippet tslide "Description" b
---
class: center, middle, inverse

# $1
---
endsnippet
